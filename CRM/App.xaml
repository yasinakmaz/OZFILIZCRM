<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CRM"
             x:Class="CRM.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Global App Colors -->
            <Color x:Key="Primary">#007bff</Color>
            <Color x:Key="Secondary">#6c757d</Color>
            <Color x:Key="Success">#28a745</Color>
            <Color x:Key="Danger">#dc3545</Color>
            <Color x:Key="Warning">#ffc107</Color>
            <Color x:Key="Info">#17a2b8</Color>
            <Color x:Key="Light">#f8f9fa</Color>
            <Color x:Key="Dark">#343a40</Color>

            <!-- App Styles -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Dark}" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontFamily" Value="OpenSansSemibold" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="14,10" />
            </Style>

            <!-- BlazorWebView Styles -->
            <Style TargetType="Microsoft.AspNetCore.Components.WebView.Maui.BlazorWebView">
                <Setter Property="BackgroundColor" Value="{StaticResource Light}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>