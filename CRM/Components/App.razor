@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Authorization
@using CRM.Components.Layout

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeView>
                <Authorized>
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                    <FocusOnNavigate RouteData="@routeData" Selector="h1" />
                </Authorized>
                <NotAuthorized>
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(AuthLayout)" />
                    <FocusOnNavigate RouteData="@routeData" Selector="h1" />
                </NotAuthorized>
            </AuthorizeView>
        </Found>
        <NotFound>
            <PageTitle>Sayfa Bulunamadı</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
                    <div class="text-center">
                        <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
                        <h1 class="display-4 text-muted">404</h1>
                        <h2 class="mb-3">Sayfa Bulunamadı</h2>
                        <p class="lead mb-4">Aradığınız sayfa mevcut değil veya taşınmış olabilir.</p>
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

<div id="blazor-error-ui">
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Beklenmeyen Hata
        </h4>
        <p class="mb-3">
            Uygulamada beklenmeyen bir hata oluştu. Lütfen sayfayı yenileyin.
        </p>
        <hr>
        <div class="d-flex justify-content-between">
            <button class="btn btn-outline-danger" onclick="window.location.reload()">
                <i class="fas fa-redo me-2"></i>
                Sayfayı Yenile
            </button>
            <small class="text-muted">
                Sorun devam ederse sistem yöneticisi ile iletişime geçin.
            </small>
        </div>
    </div>
</div>